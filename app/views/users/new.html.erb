<%= form_for @user do |f| %>
  <div>
    <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    <% end %>
  </div>

  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %> <br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %> <br>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit "Sign up" %>
<% end %>
