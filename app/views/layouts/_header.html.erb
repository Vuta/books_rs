<div class="row">
  <div class="ui container">
    <div class="ui large secondary menu">
      <a href="/" class="item">Home</a>
      <div class="right item">
        <% if signed_in? %>
          <%= link_to "Sign out", sign_out_path, method: :delete, class: "ui button" %>
        <% else %>
          <%= form_for :session, html: { class: "ui mini form" }, url: sign_in_path do |f| %>
            <div class="fields">
              <div class="field">
                <%= f.email_field :email, placeholder: "Email" %>
              </div>

              <div class="field">
                <%= f.password_field :password, placeholder: "Password" %>
              </div>

              <div class="field">
                <%= f.submit "Sign in", class: "ui mini black button" %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
