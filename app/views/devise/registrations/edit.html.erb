<div class="ui grid">
  <div class="row">
    <div class="six wide column centered align">
      <div class="ui grid">
        <div class="column center aligned">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form error" }) do |f| %>
        <% if resource.errors.any? %>
          <div class="ui error message">
            <%= devise_error_messages! %>
          </div>
        <% end %>

        <div class="ui stacked segment">

          <div class="field <%= "error" if resource.errors[:name].present? %>">
            <%= f.label :name %>
            <div class="ui left icon input labeled">
              <%= f.text_field :name, autofocus: true %>
              <i class="user icon"></i>
            </div>
          </div>


          <div class="field <%= "error" if resource.errors[:email].present? %>">
            <%= f.label :email %>
            <div class="ui left icon input fluid">
              <i class="mail icon"></i>
              <%= f.email_field :email %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field <%= "error" if resource.errors[:password].present? %>">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
            <div class="ui left icon input fluid">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>

          <div class="field <%= "error" if resource.errors[:password].present? %>">
            <%= f.label :password_confirmation %>
            <div class="ui left icon input fluid">
              <i class="lock icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>

          <div class="field <%= "error" if resource.errors[:password].present? %>">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <div class="ui left icon input fluid">
              <i class="lock icon"></i>
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>
          </div>

          <div class="field">
            <%= f.label :avatar %>
            <%= f.file_field :avatar %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "ui fluid large teal button" %>
          </div>
        </div>
      <% end %>

      <div class="ui message">
        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui red button" %></p>

        <%= link_to "Back", :back, class: "ui tiny button" %>
      </div>
    </div>
  </div>
</div>

