<div class="ui grid">
<div class="row">
  <div class="six wide column centered align">
    <div class="ui grid">
      <div class="column center aligned">
        <h2>Sign up</h2>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form error"}) do |f| %>
      <% if resource.errors.any? %>
        <div class="ui error message">
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <div class="ui stacked segment">
        <div class="field <%= "error" if resource.errors[:name].present? %>">
          <div class="ui left icon input labeled">
            <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field <%= "error" if resource.errors[:email].present? %>">
          <div class="ui left icon input fluid">
            <i class="mail icon"></i>
            <%= f.email_field :email, placeholder: "Email" %>
          </div>
        </div>

        <div class="field <%= "error" if resource.errors[:password].present? %>">
          <div class="ui left icon input fluid">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password(minimum 6 characters)" %>
          </div>
        </div>

        <div class="field <%= "error" if resource.errors[:password_confirmation].present? %>">
          <div class="ui left icon input fluid">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "ui fluid large teal button" %>
        </div>
      </div>
    <% end %>

    <div class="ui message">
      Already had an account? <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
