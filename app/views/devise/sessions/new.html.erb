<div class="ui grid">
  <div class="row">
    <div class="six wide column centered align center aligned">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input fluid">
              <i class="mail icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input fluid">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: "ui teal fluid button" %>
          </div>
        </div>
      <% end %>

      <div class="ui message">
        Haven't had an account? <%= link_to "Sign Up", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>
