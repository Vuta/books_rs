<div class="ui vertical segment">
  <div class="ui grid">

    <div class="ui vertical pointing menu">
      <div class="item">
        <div class="header">Favorite genres:</div>
        <div class="menu">
          <% @fav_genres.each.with_index do |genre, index| %>
            <a class="genre_link item <%= 'default_fav_content' if index == 0 %>" data-genre="<%= genre %>" href="#<%= genre %>"><%= genre %></a>
          <% end %>
        </div>
      </div>

      <div class="item">
        <div class="header">More genres:</div>
        <div class="menu">
          <% @other_genres.each do |genre| %>
            <a class="genre_link item" data-genre="<%= genre %>"><%= genre %></a>
          <% end %>
        </div>
      </div>
    </div>

    <div class="twelve wide column">
      <%= render partial: "genre_books", collection: @genre_books %>
      <a class="ui button load_more_books">Load more</a>
    </div>
  </div>

</div>
